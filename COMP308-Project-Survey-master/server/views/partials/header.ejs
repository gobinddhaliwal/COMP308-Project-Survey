  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">xResearch</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
</button>
  

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav navbar-center">
        <% if(title == "Home") { %>
          <li class="active"><a href="/"><i class="fa fa-home fa-lg"></i> Home</a></li>
        <% } else { %>
          <li><a href="/"><i class="fa fa-home fa-lg"></i> Home</a></li>
        <% } %>

        <% if(typeof displayName == 'string' && displayName) { %>
          <% if(title == "My Surveys List") { %>
          <li class="active"><a href="/surveys/mySurveys"><i class="fa fa-quora" aria-hidden="true"></i>
          </i> My Survey List</a></li>
          <% } else { %>
            <li><a href="/surveys/mySurveys"><i class="fa fa-quora" aria-hidden="true"></i>
            </i> My Survey List</a></li>
          <% } %>
        <% } %>

        <% if(typeof displayName == 'string' && displayName) { %>
          <% if(title == "Create Survey") { %>
            <li class="active"><a href="/surveys/initial"><i class="fa fa-plus" aria-hidden="true"></i> Create</a></li>
            <% } else { %>
              <li><a href="/surveys/initial"><i class="fa fa-plus" aria-hidden="true"></i> Create</a></li>
            <% } %>
        <% } %>         

        <% if(title == "Surveys List") { %>
          <li class="active"><a href="/surveys"><i class="fa fa-commenting" aria-hidden="true"></i> Respond</a></li>
        <% } else { %>
          <li><a href="/surveys"><i class="fa fa-commenting" aria-hidden="true"></i> Respond</a></li>
        <% } %>

        <% if(typeof displayName == 'string' && displayName) { %>
          <% if(title == "User Profile") { %>
            <li class="active"><a href="../users/profile"><i class="fa fa-pencil" aria-hidden="true"></i> Update Profile</a></li>
            <% } else { %>
              <li><a href="../users/profile"><i class="fa fa-pencil" aria-hidden="true"></i> Update Profile</a></li>
            <% } %>
        <% } %>    

        <% if(typeof displayName == 'string' && displayName) { %>
          <li class="navbar-text"><i class="fa fa-user"></i> Welcome, <%= displayName %></li>
          <li><a href="/users/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
        <% } else { %>
          <li><a href="/users/login"><i class="fa fa-sign-in"></i> Login</a></li>
        <% } %>

      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>
